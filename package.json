{
  "name": "hay",
  "version": "0.0.0",
  "description": "static website builder for node",
  "author": "Ryan Clark",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/hayjs/hay.git",
    "type": "git"
  },
  "scripts": {
    "build": "yarn run lint && yarn run compile && yarn run bundle && yarn run bundle:cli",
    "bundle": "rollup -c rollup.config.js >/dev/null 2>&1",
    "bundle:cli": "rollup -c rollup.cli.config.js >/dev/null 2>&1",
    "compile": "tsc -p tsconfig.json",
    "start": "nodemon --exec yarn run build -e ts --watch src/",
    "clean": "rimraf dist && mkdir -p dist",
    "copy": "cp src/package.json dist/package.json",
    "lint": "tslint --project tsconfig.json",
    "prestart": "yarn run clean && yarn run copy",
    "test": "TS_NODE_PROJECT=tsconfig.test.json yarn run lint && mocha --compilers ts:ts-node/register"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/chokidar": "^1.4.29",
    "@types/commander": "^2.3.30",
    "@types/core-js": "^0.9.35",
    "@types/express": "^4.0.34",
    "@types/glob": "^5.0.30",
    "@types/html-entities": "^1.2.15",
    "@types/js-yaml": "^3.5.28",
    "@types/marked": "^0.0.28",
    "@types/mkdirp": "^0.3.29",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.48",
    "@types/nunjucks": "^0.0.32",
    "@types/progress": "^1.1.28",
    "@types/rimraf": "^0.0.28",
    "@types/socket.io": "^1.4.27",
    "@types/uglify-js": "^2.6.28",
    "chai": "^3.5.0",
    "eslint": "^3.10.2",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "rollup": "^0.36.4",
    "rollup-plugin-cli": "^0.1.5",
    "ts-node": "^1.7.0",
    "tslint": "^4.0.2",
    "tslint-eslint-rules": "^3.1.0",
    "typescript": "2.1.1"
  },
  "dependencies": {
    "chokidar": "^1.6.1",
    "commander": "^2.9.0",
    "express": "^4.14.0",
    "glob": "^7.1.1",
    "highlight.js": "^9.8.0",
    "html-entities": "^1.2.0",
    "js-yaml": "^3.7.0",
    "liquid-node": "^2.6.1",
    "marked": "^0.3.6",
    "mime": "^1.3.4",
    "nunjucks": "^3.0.0",
    "prismjs": "^1.6.0",
    "progress": "^1.1.8",
    "rimraf": "^2.5.4",
    "socket.io": "^1.5.1",
    "tiny-lr": "^1.0.3",
    "tslint": "^4.0.2",
    "webpack": "2.1.0-beta.25",
    "webpack-dev-middleware": "1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  }
}
